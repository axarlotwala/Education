<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECEFF1">

                <RadioButton
                    android:id="@+id/radio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Spelization"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:checked="true"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="250"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/expand_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:ael_duration="500"
                app:ael_expanded="false"
                app:ael_orientation="vertical">


            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cource_text"
                android:textSize="15sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/h_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2h 23m"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/video_lession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 video lession"
                android:drawableLeft="@drawable/ic_video_library_black_24dp"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"/>

            <TextView
                android:id="@+id/verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification"
                android:drawableLeft="@drawable/ic_verified_user_black_24dp"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"/>

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
